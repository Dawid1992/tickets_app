<%= form_with(model: ticket) do |form| %>
  <% if ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
        <% ticket.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
  <% end %>

  <div class="field">
    <%= form.hidden_field :user_id, value:@user_id_to_buy_ticket %>
  </div>

  <div class="field">
    <%= form.hidden_field :event_id, value: @event_id %>
  </div>

  <div class="row">
    <div class="field col">
      <label class="form-label">Please, select quantity</label>
      <input type="number" min="1" value="1" name="ticket[amount]" required="required" class="form-control">
    </div>

    <div class="field col">
      <label class="form-label">Please enter a card number</label>
      <input type="text" name="ticket[card_number]" required="required" class="form-control">
    </div>
  </div>





  <div class="actions">
    <%= form.submit "Buy ticket", class: "btn btn-success" %>
  </div>
<% end %>
